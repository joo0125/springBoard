<?xml version="1.0" encoding="UTF-8"?>

<Configuration>
	<!-- 로그 출력 방식 -->
	<Appenders>
    	<!-- 콘솔 출력 방식 -->
		<Console name="console-log" target="SYSTEM_OUT">
			<PatternLayout pattern="%d %-5p [%t] %C{2} (%F:%L) - %m%n" />
		</Console>
	</Appenders>
	
	<Loggers>
		<Root level="INFO">
			<appender-ref ref="console-log" level="INFO" />
		</Root>
	</Loggers>
</Configuration>